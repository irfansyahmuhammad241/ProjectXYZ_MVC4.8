@model ProjectXYZ_MVC4._8.Models.Manager

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Manager</h2>

<h3>Are you sure you want to delete this manager?</h3>
<div>
    <h4>Manager ID: @Model.ID</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.ManagerName)</dt>
        <dd>@Html.DisplayFor(model => model.ManagerName)</dd>

        <dt>@Html.DisplayNameFor(model => model.ManagerEmail)</dt>
        <dd>@Html.DisplayFor(model => model.ManagerEmail)</dd>

        <dt>@Html.DisplayNameFor(model => model.ManagerPhone)</dt>
        <dd>@Html.DisplayFor(model => model.ManagerPhone)</dd>
    </dl>
    @using (Html.BeginForm("Delete", "Manager", new { id = Model.ID }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <p>
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
        </p>
    }
</div>

