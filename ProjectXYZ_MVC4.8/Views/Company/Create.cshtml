@model ProjectXYZ_MVC4._8.Models.Company

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Company", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.CompanyName)
        @Html.TextBoxFor(model => model.CompanyName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.CompanyName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CompanyEmail)
        @Html.TextBoxFor(model => model.CompanyEmail, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.CompanyEmail)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CompanyPhoneNumber)
        @Html.TextBoxFor(model => model.CompanyPhoneNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.CompanyPhoneNumber)
    </div>

    <div class="form-group">
        @Html.HiddenFor(model => model.ApprovalStatus)
        @Html.HiddenFor(model => model.ApprovalStatus, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ApprovalStatus)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CompanyPhoto)
        @Html.TextBoxFor(model => model.CompanyPhoto, new { type = "file", @class = "form-control", name = "CompanyPhoto" })
        @Html.ValidationMessageFor(model => model.CompanyPhoto)
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
